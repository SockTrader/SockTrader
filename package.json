{
  "name": "socktrader",
  "version": "1.0.0",
  "description": "Websocket based trading bot for cryptocurrencies",
  "main": "src/index.ts",
  "repository": "cwouter/SockTrader",
  "scripts": {
    "test": "jest --coverage --ci --forceExit",
    "dev": "cross-env NODE_ENV=dev nodemon -e ts --exec \"npm run compile && node ./build/index.js\"",
    "compile": "tsc",
    "compile-es5": "tsc --target \"ES5\"",
    "docs": "esdoc",
    "lint": "tslint --fix --project ./",
    "pre-commit": "echo 'Pre-commit checks..' && exit 0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts}"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  },
  "pre-commit": [
    "pre-commit",
    "lint"
  ],
  "authors": [
    "wouter cleymans",
    "thijs raets"
  ],
  "engines": {
    "node": ">=10.14.2"
  },
  "license": "GPL-3.0",
  "nodemonConfig": {
    "ignore": [
      "logs/*"
    ],
    "delay": "2500"
  },
  "esdoc": {
    "source": "./src",
    "destination": "./docs",
    "plugins": [
      {
        "name": "esdoc-standard-plugin"
      },
      {
        "name": "esdoc-node"
      },
      {
        "name": "esdoc-ecmascript-proposal-plugin",
        "option": {
          "all": true
        }
      }
    ]
  },
  "dependencies": {
    "cron": "^1.5.0",
    "cron-parser": "^2.6.0",
    "data-forge": "^1.3.0",
    "data-forge-fs": "0.0.3",
    "data-forge-plot": "^0.1.11",
    "decimal.js-light": "^2.4.1",
    "lodash.reverse": "^4.0.1",
    "lodash.sortby": "^4.7.0",
    "lodash.uniqby": "^4.7.0",
    "lodash.uniqwith": "^4.5.0",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.22.2",
    "nanoid": "^2.0.0",
    "nanoid-dictionary": "^2.0.0",
    "numeral": "^2.0.6",
    "rimraf": "^2.6.3",
    "technicalindicators": "^2.0.5",
    "typescript": "^3.1.6",
    "websocket": "^1.0.28",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/cron": "^1.3.0",
    "@types/jest": "^23.3.12",
    "@types/lodash.reverse": "^4.0.4",
    "@types/lodash.sortby": "^4.7.4",
    "@types/lodash.uniqby": "^4.7.4",
    "@types/lodash.uniqwith": "^4.5.4",
    "@types/minimist": "^1.2.0",
    "@types/mkdirp": "^0.5.2",
    "@types/nanoid": "^1.2.0",
    "@types/node": "^10.12.15",
    "@types/numeral": "0.0.25",
    "@types/rimraf": "^2.0.2",
    "@types/sinon": "^7.0.2",
    "@types/websocket": "0.0.40",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-node": "^1.0.3",
    "esdoc-standard-plugin": "^1.0.0",
    "jest": "^23.6.0",
    "pre-commit": "^1.2.2",
    "sinon": "^7.1.1",
    "source-map-support": "^0.5.9",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0"
  }
}
